<%- include("partials/header.ejs") -%>


<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/signup" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="email">Username</label>
              <input type="text" class="form-control" name="user">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>&nbsp;&nbsp;&nbsp;
            <a href="/login">Oh sorry... I've already registered. take me back to the login page!</a>
          </form>

        </div>
      </div>

    </div>

    <br>
        
        <div class="col-md-3" style="border-radius:12px;"> 
          <a class="btn btn-lg btn-google btn-danger btn-block btn-outline" style="font-size: small;" href="/auth/google"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> SignUp Using Google</a> 
        </div>

  </div>

</div>


