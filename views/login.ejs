<%- include("partials/header.ejs") -%>



<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Login</button>
            </form>

            <br />

          </div>
        </div>

        <div style="display: flex;flex-direction: row;justify-content:space-between">
          <a href="/signup">Don't have an account?... Register!</a>
          <a href="/reset">Forgot password?</a>
        </div>
      </div>

      <br>

  <div class="col-md-3" style="border-radius:12px;"> 
    <a class="btn btn-lg btn-google btn-danger btn-block btn-outline" style="font-size: small;" href="/auth/google"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> Signin Using Google</a> 
  </div>

    </div>

    <!-- <a href="/signup">Don't have an account?... Register!</a> -->

</div>





